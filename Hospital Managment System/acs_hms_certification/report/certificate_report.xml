<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="certificate_report_document">
        <t t-call="web.external_layout">
            <div class="page col-offset-1">
                <br />
                <div class="row mb32">
                    <div class="col-6 col-offset-3 text-center">
                        <h3>
                            <i>
                                <u>
                                    <strong>Certificate</strong>
                                </u>
                            </i>
                        </h3>
                    </div>
                </div>
                <table class="table" style="border-bottom: 1px solid black;">
                    <tr>
                        <td style="width:50%;border: none;">
                            <strong>Name : <span t-field="doc.patient_id.name"/></strong>
                        </td>
                        <td style="width:50%;border: none;">
                            <strong>Dr. : <span t-field="doc.physician_id.name"/></strong>
                        </td>
                    </tr>
                    <tr col="4">
                        <td style="width:50%;border: none;">
                            <strong>Reg No: <span t-field="doc.name" /></strong>
                        </td>
                        <td style="width:50%;border: none;">
                            <strong>Date. : <span t-field="doc.date" /></strong>
                        </td>
                    </tr>
                </table>
                <div class="row mt32 mb32">
                    <table class="table">
                        <tr>
                            <td style="border: none;">
                                <span t-field="doc.certificate_content"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </t>
    </template>

    <template id="certificate_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="acs_hms_certification.certificate_report_document" t-lang="doc.patient_id.partner_id.lang"/>
            </t>
        </t>
    </template>

    <report id="report_certificate_management" 
        string="Certificate" 
        model="certificate.management" 
        report_type="qweb-pdf"
        file="acs_hms_certification.certificate_report"
        name="acs_hms_certification.certificate_report"
    />

</odoo>