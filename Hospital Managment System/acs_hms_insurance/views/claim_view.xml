<?xml version="1.0"?>
<odoo>

    <!-- Insurance Company -->
    <record id="view_insurance_company_tree" model="ir.ui.view">
        <field name="name">hms.insurance.company.tree</field>
        <field name="model">hms.insurance.company</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="view_insurance_company_form" model="ir.ui.view">
        <field name="name">hms.insurance.company.form</field>
        <field name="model">hms.insurance.company</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_insurance_company" model="ir.actions.act_window">
        <field name="name">Isurance Company</field>
        <field name="res_model">hms.insurance.company</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Insureance Checklist -->
    <record id="view_checklist_tree" model="ir.ui.view">
        <field name="name">insurance.checklist.template.tree</field>
        <field name="model">hms.insurance.checklist.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_checklist_form" model="ir.ui.view">
        <field name="name">hms.insurance.checklist.template.form</field>
        <field name="model">hms.insurance.checklist.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_checklist_tree" model="ir.actions.act_window">
        <field name="name">Checklist</field>
        <field name="res_model">hms.insurance.checklist.template</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Required Doc -->
    
    <record id="view_mediclaim_doc_tree" model="ir.ui.view">
        <field name="name">insurance.req.doc.tree</field>
        <field name="model">hms.insurance.req.doc</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_mediclaim_doc_type_form" model="ir.ui.view">
        <field name="name">hms.insurance.req.doc.form</field>
        <field name="model">hms.insurance.req.doc</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_mediclaim_doc_type" model="ir.actions.act_window">
        <field name="name">Req Documents</field>
        <field name="res_model">hms.insurance.req.doc</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Claim View -->

    <record id="view_claim_tree" model="ir.ui.view">
        <field name="name">insurance.claim.tree</field>
        <field name="model">hms.insurance.claim</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="hospitalization_id"/>
                <field name="patient_id"/>
                <field name="policy_number"/>
                <field name="insurance_company_id"/>
                <field name="tpa_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_insurance_claim_form" model="ir.ui.view">
        <field name="name">hms.insurance.claim.form</field>
        <field name="model">hms.insurance.claim</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" states="draft" type="object" string="Confirm" class="oe_highlight"/>
                    <button name="action_sent" states="confirm" type="object" string="Send For Approval" class="oe_highlight"/>
                    <button name="action_approve" states="sent" type="object" string="Approved" class="oe_highlight"/>
                    <button name="action_received" states="approve" type="object" string="Received" class="oe_highlight"/>
                    <button name="action_done" states="received" type="object" string="Done" class="oe_highlight"/>
                    <button name="action_cancel" states="draft,approve,received,confirm" type="object" string="Cancel" class="oe_highlight"/>
                    <button name="action_draft" states="cancel" type="object" string="Set to Draft" class="oe_highlight"/>
                    <field name="state" statusbar_visible="confirm,sent,approve,received,done" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" groups="acs_hms.group_hms_receptionist">
                        <button name="action_view_invoice" string="View Invoice" groups="acs_hms.group_hms_receptionist" attrs="{'invisible': [('state', 'not in', ['done','invoiced'])]}" type="object" class="oe_stat_button" icon="fa-pencil-square-o"/>
                    </div>
                    <div class="oe_title">
                        <label for="name" string="Name" class="oe_edit_only" />
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="insurance_company_id"/>
                            <field name="policy_number"/>
                            <field name="tpa_id"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="patient_id"/>
                            <field name="hospitalization_id" domain="[('patient_id', '=', patient_id)]"/>
                            <field name="package_id"/>
                            <field name="req_document_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="General Information">

                            <group>
                                <field name="amount_requested"/>
                                <field name="amount_pass"/>
                                <field name="amount_difference"/>

                                <field name="date_received"/>
                                <field name="amount_received"/>
                                <field name="amount_tds"/>
                                <field name="amount_total"/>
                            </group>
                            <group>
                                <field name="question" string="If any Query"/>
                                <field name="answer"/>
                            </group>
                        </page>
                        <page string="Documents">
                            <!-- <button class="oe_highlight oe_right" name="action_open_preview" string="Preview" type="object"></button> -->
                            <field name="doc_ids" mode="kanban" nolabel="1"/>
                        </page>
                        <page name="checklist" string="Checklist">
                            <field name="checklist_marked" widget="percentpie" nolabel="1"/>
                            <saprator string="Checklist"/>
                            <field name="checklist_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="name" />
                                    <field name="is_done" />
                                    <field name="remark" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_acs_insurance_claim_calendar" model="ir.ui.view">
        <field name="name">hms.insurance.claim.calendar</field>
        <field name="model">hms.insurance.claim</field>
        <field name="type">calendar</field>
        <field name="arch" type="xml">
            <calendar string="Claim" color="patient_id" date_start="date" date_stop="date_received">
                <field name="hospitalization_id"/>
                <field name="package_id"/>
                <field name="patient_id"/>
            </calendar>
        </field>
    </record>

    <record id="view_insurance_claim_pivot" model="ir.ui.view">
        <field name="name">hms.insurance.claim.pivot</field>
        <field name="model">hms.insurance.claim</field>
        <field name="arch" type="xml">
            <pivot string="Claim">
                <field name="insurance_company_id" type="row"/>
                <field name="tpa_id" type="row"/>
            </pivot>
        </field>
    </record>

    <record id="action_insurance_claim" model="ir.actions.act_window">
        <field name="name">Claim</field>
        <field name="res_model">hms.insurance.claim</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,calendar,pivot</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add a new Patient Hospitalization.
            </p>
        </field>
    </record>

</odoo>